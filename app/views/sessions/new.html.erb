<h2 class="row justify-content-center mt-2">Log In</h2>

<div class="container justify-content-center col-7">

  <!--Because Sessions don't have a model, use the scope: argument for form_with instead.
      That also implies we have to tell the form where to submit, hence the url: portion-->
  <%= form_with(scope: :session,
                url: login_path,
                class: "shadow p-3 mb-3 bg-grey rounded") do |f| %>

    <div class="form-group row mt-2">
      <%= f.label 'Email: ', class: 'col-2 col-form-label'  %>
      <div class="col-9">
        <%= f.email_field :email_address, class: 'form-control shadow rounded',
                          placeholder: 'Enter your email address' %>
      </div>
    </div>

    <div class="form-group row mt-2">
      <%= f.label 'Password: ', class: 'col-2 col-form-label'  %>
      <div class="col-9">
        <%= f.password_field :password, class: 'form-control shadow rounded' %>
     </div>
    </div>

    <div class="text-center mt-2">
        <%= f.submit('Log in') %>
    </div>

  <% end %>

</div>

<div class="text-center mt-2 mb-2">
  <%= link_to '[ Cancel and return to Articles Listing ]',
              articles_path,
              class: 'text-decoration-none' %>
</div>
