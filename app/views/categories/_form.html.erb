<div class="container justify-content-center col-6">

  <%= form_with(model: @category, local: true, class: "shadow p-3 mb-3 bg-grey rounded") do |f| %>

    <div class="form-group row">

        <%= f.label 'Name:', class: 'col-2 col-form-label' %>

        <div class="col-10">
          <%= f.text_field :name,
                            autofocus: true,
                            class: 'form-control shadow rounded',
                            placeholder: "Enter a category" %>
        </div>

    </div>

    <div class="text-center mt-2">
        <%= f.submit %>
    </div>

  <% end %>

</div>

<div class="text-center mt-2 mb-2">
  <%= link_to '[ Cancel and return to Articles Listing ]',
              articles_path,
              class: 'text-decoration-none' %>
</div>
