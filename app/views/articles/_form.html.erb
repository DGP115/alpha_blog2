<div class="container justify-content-center col-10">

  <%= form_with(model: @article, local: true, class: "shadow p-3 mb-3 bg-grey rounded") do |f| %>

    <div class="form-group row">

        <%= f.label 'Title:', class: 'col-1 col-form-label' %>

        <div class="col-10">
          <%= f.text_field :title, class: 'form-control shadow rounded',
                                    placeholder: "Enter a title" %>
        </div>

    </div>

    <div class="form-group row mt-2">

      <%= f.label 'Contents: ', class: 'col-1 col-form-label'  %>

      <div class="col-10">
        <%= f.text_area :description, rows: 10, class: 'form-control shadow rounded' %>
      </div>

    </div>

    <div class="text-center mt-2">
        <%= f.submit %>
    </div>

  <% end %>

</div>

<div class="text-center mt-2 mb-2">
  <%= link_to '[ Cancel and return to Articles Listing ]',
              articles_path,
              class: 'text-decoration-none' %>
</div>


