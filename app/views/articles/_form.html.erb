<div class="container justify-content-center col-12">

  <%= form_with(model: @article, local: true, class: "shadow p-3 mb-3 bg-grey rounded") do |f| %>

    <div class="form-group row">

        <%= f.label 'Title:', class: 'col-1 col-form-label mr-3' %>

        <div class="col-8">
          <%= f.text_field :title, class: 'form-control shadow rounded',
                                    placeholder: "Enter a title" %>
        </div>

    </div>

    <div class="form-group row mt-2">
      <div class="col-9">
        <%= f.label 'Contents: ', class: 'col-form-label'  %>
        <%= f.text_area :description, rows: 10, class: 'form-control shadow rounded' %>
      </div>
      <div class="col-3">
        <%= f.label 'Categories: ', class: 'col-form-label'  %>
        <%= f.collection_select(:category_ids, Category.all.order(name: :asc), :id, :name,
                                { prompt: 'ctrl-click for multiple' }, { multiple: true, size: 10, class: "form-select form-select-sm shadow rounded" } ) %>
      </div>
    </div>

    <div class="text-center mt-2">
        <%= f.submit %>
    </div>

  <% end %>

</div>

<div class="text-center mt-2 mb-2">
  <%= link_to '[ Cancel and return to Articles Listing ]',
              articles_path,
              class: 'text-decoration-none' %>
</div>


